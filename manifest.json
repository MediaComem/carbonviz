{
  "manifest_version": 2,
  "name": "CarbonViz",
  "description": "Your browsing climate impact, made visible.",
  "author": "Media Engineering Institute - HEIG-VD",
  "version": "0.3.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png" },
  "permissions": [
    "tabs",
    "webRequest",
    "<all_urls>"
  ],
  "background": {
    "page": "background/background.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "css": [],
      "js": ["content/miniViz-script.js","content/miniVizPopup.js","content/matter.js"]
    }
  ],
  "browser_action": {
    "browser_style": true,
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  "web_accessible_resources": [
    "content/*",
    "unplug/js/*",
    "unplug/assets/*",
    "bundle/*",
    "popup/*"
  ]
}
