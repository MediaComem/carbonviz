{
  "manifest_version": 2,
  "name": "CarbonViz",
  "description": "Analyse Internet usage carbon footprint",
  "author": "Media Engineering Institute - HEIG-VD",
  "version": "0.0.1",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png" },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webRequest",
    "<all_urls>"
  ],
  "background": {
    "page": "background/background.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "css": [],
      "js": ["content/miniViz-script.js","content/miniVizPopup.js"]
    }
  ],
  "browser_action": {
    "browser_style": true,
    "default_popup": "popup/popup.html",
    "default_icon": {
    }
  },
  "web_accessible_resources": [
    "content/*",
    "unplug/js/*",
    "unplug/assets/*",
    "bundle/miniviz.js",
    "popup/*"
  ]
}
